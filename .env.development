# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL) - Docker Compose defaults
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=rag_voice_db

# Vector Database Configuration (Qdrant) - Docker Compose defaults
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=faq_documents

# Redis Configuration - Docker Compose defaults
REDIS_URL=redis://redis:6379

# Security - Development only, change for production
JWT_SECRET=dev-jwt-secret-key-not-for-production

# OpenAI Configuration - Add your actual API key
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Google Cloud Configuration - Add your actual credentials
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# Speech Services Configuration
SPEECH_LANGUAGE_CODE=en-US
SPEECH_MODEL=chirp
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-D

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000