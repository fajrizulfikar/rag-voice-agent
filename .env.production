# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (PostgreSQL)
# Use environment variables or Docker secrets in production
DATABASE_HOST=${POSTGRES_HOST}
DATABASE_PORT=${POSTGRES_PORT}
DATABASE_USERNAME=${POSTGRES_USER}
DATABASE_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_NAME=${POSTGRES_DB}

# Vector Database Configuration (Qdrant)
QDRANT_URL=${QDRANT_URL}
QDRANT_API_KEY=${QDRANT_API_KEY}
QDRANT_COLLECTION_NAME=faq_documents

# Redis Configuration
REDIS_URL=${REDIS_URL}

# Security - Use Docker secrets or secure environment variables
JWT_SECRET=${JWT_SECRET}

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=${GOOGLE_CLOUD_PROJECT_ID}
GOOGLE_APPLICATION_CREDENTIALS=${GOOGLE_APPLICATION_CREDENTIALS}

# Speech Services Configuration
SPEECH_LANGUAGE_CODE=en-US
SPEECH_MODEL=chirp
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-D

# Frontend Configuration
NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}